{
  "domEvents": [
    {
      "name": "click",
      "enabled": true,
      "handler": "recordEvent",
      "description": "Mouse click interactions"
    },
    {
      "name": "mousedown",
      "enabled": false,
      "handler": "recordEvent",
      "description": "Mouse button press"
    },
    {
      "name": "mouseup",
      "enabled": false,
      "handler": "recordEvent",
      "description": "Mouse button release"
    },
    {
      "name": "pointerdown",
      "enabled": true,
      "handler": "recordEvent",
      "description": "Pointer down (mouse, pen, touch)"
    },
    {
      "name": "pointerup",
      "enabled": false,
      "handler": "recordEvent",
      "description": "Pointer up (mouse, pen, touch)"
    },
    {
      "name": "selectstart",
      "enabled": true,
      "handler": "recordEvent",
      "description": "Selection initiated (Critical for Table Sorting)"
    },
    {
      "name": "selectionchange",
      "enabled": true,
      "handler": "recordEvent",
      "description": "Selection changed"
    },
    {
      "name": "mouseover",
      "enabled": false,
      "handler": "recordEvent",
      "description": "Pointer enters element"
    },
    {
      "name": "mouseout",
      "enabled": false,
      "handler": "recordEvent",
      "description": "Pointer leaves element"
    },
    {
      "name": "keydown",
      "enabled": true,
      "handler": "recordEvent",
      "description": "Key pressed down"
    },
    {
      "name": "keyup",
      "enabled": false,
      "handler": "recordEvent",
      "description": "Key released"
    },
    {
      "name": "keypress",
      "enabled": false,
      "handler": "recordEvent",
      "description": "Printable key pressed"
    },
    {
      "name": "scroll",
      "enabled": false,
      "handler": "debouncedRecordScroll",
      "description": "Page or element scrolling"
    },
    {
      "name": "input",
      "enabled": true,
      "handler": "debouncedRecordInput",
      "description": "Input value changes"
    },
    {
      "name": "change",
      "enabled": true,
      "handler": "debouncedRecordInput",
      "description": "Committed value change"
    },
    {
      "name": "focus",
      "enabled": false,
      "handler": "recordEvent",
      "description": "Element focus"
    },
    {
      "name": "blur",
      "enabled": false,
      "handler": "recordEvent",
      "description": "Element blur"
    },
    {
      "name": "submit",
      "enabled": true,
      "handler": "recordEvent",
      "description": "Form submission"
    },
    {
      "name": "touchstart",
      "enabled": false,
      "handler": "recordEvent",
      "description": "Touch start (mobile)"
    },
    {
      "name": "touchend",
      "enabled": false,
      "handler": "recordEvent",
      "description": "Touch end (mobile)"
    },
    {
      "name": "touchmove",
      "enabled": false,
      "handler": "recordEvent",
      "description": "Touch move (mobile)"
    }
  ],
  "navigationEvents": [
    {
      "name": "popstate",
      "enabled": true,
      "description": "Browser back/forward"
    },
    {
      "name": "pushState",
      "enabled": true,
      "description": "SPA route changes"
    },
    {
      "name": "replaceState",
      "enabled": true,
      "description": "SPA history replacement"
    },
    {
      "name": "beforeunload",
      "enabled": true,
      "description": "Page unload warning"
    }
  ],
  "observers": {
    "dynamicDom": true
  },
  "htmlCapture": {
    "enabled": true
  }
}
