{
  "manifest_version": 3,
  "name": "Task Recorder",
  "version": "1.0",
  "description": "Records user actions and screen during tasks",
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "downloads",
    "offscreen",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["event-config.json",
       "offscreen/offscreen.html", 
       "offscreen/offscreen.js",
       "bgym/browsergym-inject.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "incognito": "split"
}
